@model SnakeProj.Models.Api.SnakeFieldDataModel

<table>
    @for (int cellCounter = 0; cellCounter < Model.FieldWidth; cellCounter++) 
    {
        <tr>

            @for (int rowCounter = 0; rowCounter < Model.FieldHeigth; rowCounter++)
            {
                @switch(Model.FieldData[cellCounter][rowCounter])
                {
                    case 1: //apple
                        <td  style="background-color: #FF6347;">  </td>
                        break;
                    case 2: //snake
                        <td style="background-color: #343b29;">  </td>
                        break;
                    case 3: //snake
                        <td style="background-color: #006400;">  </td>
                        break;
                    default:
                        <td></td>
                        break;
                }
                
                    
                
            }
        </tr>
    }
</table>
